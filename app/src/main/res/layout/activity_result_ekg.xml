<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidplot="http://schemas.android.com/apk/lib/com.example.applicationname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iuridiniz.checkmyecg.ResultEkgActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/result_text"
            android:layout_gravity="center_horizontal" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/result_plot"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            androidplot:androidPlot.titleWidget.visible="false"
            androidplot:androidPlot.domainLabelWidget.visible="false"
            androidplot:androidPlot.rangeLabelWidget.visible="false"
            androidplot:androidPlot.legendWidget.visible="false"
            androidplot:androidPlot.graphWidget.marginTop="10dp"
            androidplot:androidPlot.graphWidget.marginLeft="15dp"
            androidplot:androidPlot.graphWidget.marginBottom="15dp"
            androidplot:androidPlot.graphWidget.marginRight="10dp"
            androidplot:androidPlot.graphWidget.rangeLabelPaint.textSize="15dp"
            androidplot:androidPlot.graphWidget.rangeLabelPaint.color="#FF000000"
            androidplot:androidPlot.graphWidget.rangeOriginLabelPaint.textSize="15dp"
            androidplot:androidPlot.graphWidget.domainLabelPaint.textSize="15dp"
            androidplot:androidPlot.graphWidget.domainLabelPaint.color="#FF000000"
            androidplot:androidPlot.graphWidget.domainOriginLabelPaint.textSize="15dp"
            androidplot:androidPlot.graphWidget.gridLinePaint.color="#FF000000"
        />


    </LinearLayout>
</RelativeLayout>
